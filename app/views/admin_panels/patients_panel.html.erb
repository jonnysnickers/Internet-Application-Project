<% provide(:title, 'Patiens panel') %>
<h1>Patiens</h1>

<h3>Disabled</h3>
<ul class="users">
  <% @patient_disebled.each do |patient| %>
    <li>
      <div class="userlistforadmin" >
        <%= link_to "#{patient.firstname} #{patient.lastname}", "users/#{patient.id}" %>
      </div>
      <div class="userlistforadmin2" >
        <%= form_for(:no_params, url: "/enable_patient/#{patient.id}") do |f| %>
        <%= f.submit "Enable", class: "btn btn-primary btn-xs" %>
        <% end %>
      </div>
      <div class="userlistforadmin2" >
        <%= link_to "Edit user", "users/#{patient.id}/edit", :class => "btn btn-primary btn-xs" %>
      </div>
      <div class="userlistforadmin2" >
        <%= form_for(:no_params, url: "/delete_patient/#{patient.id}") do |f| %>
        <%= f.submit "Delete", class: "btn btn-danger btn-xs", data: { confirm: 'Are you sure you want to delete this user?' } %>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>

<h3>Enabled</h3>
<ul class="users">
  <% @patient_enabled.each do |patient| %>
    <li>
      <div class="userlistforadmin" >
        <%= link_to "#{patient.firstname} #{patient.lastname}", "users/#{patient.id}" %>
      </div>
      <div class="userlistforadmin2" >
        <%= link_to "Edit user", "users/#{patient.id}/edit", :class => "btn btn-primary btn-xs" %>
      </div>
      <div class="userlistforadmin2" >
        <%= form_for(:no_params, url: "/delete_patient/#{patient.id}") do |f| %>
        <%= f.submit "Delete", class: "btn btn-danger btn-xs", data: { confirm: 'Are you sure you want to delete this user?' } %>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>