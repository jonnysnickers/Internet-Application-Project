<% provide(:title, 'Doctors panel') %>
<h1>Doctors</h1>

<%= link_to "Create new doctor", "/admin_new_doctor", :class => "btn btn-primary" %>

<ul class="users">
  <% @doctors.each do |doctor| %>
    <li>
      <div class="userlistforadmin" >
        <%= link_to "#{doctor.firstname} #{doctor.lastname}", "users/#{doctor.id}" %>
      </div>
      <div class="userlistforadmin2" >
        <%= link_to "Edit workplan", "duties/#{doctor.id}/edit", :class => "btn btn-primary btn-xs" %>
      </div>
      <div class="userlistforadmin2" >
        <%= link_to "Edit user", "users/#{doctor.id}/edit", :class => "btn btn-primary btn-xs" %>
      </div>
      <div class="userlistforadmin2" >
        <%= form_for(:no_params, url: "/delete_doctor/#{doctor.id}") do |f| %>
        <%= f.submit "Delete", class: "btn btn-danger btn-xs", data: { confirm: 'Are you sure you want to delete this user?' } %>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>